<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Vitalij Mudrij">
    <title><%=title %></title>
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <% styles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%=style %>.css">
    <% }) %>
</head>
<body>
    <header class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">The Page</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/news">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i>&nbsp;News
                        </a>
                    </li>
                    <li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Categories&nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/news/iphone">iPhone</a>
                                    <a href="/news/ipad">iPad</a>
                                    <a href="/news/mac">Mac</a>
                                </li>
                            </ul>
                        </li>
                    </li>
                    <li>
                        <a href="/live">
                            <i class="fa fa-play-circle-o" aria-hidden="true"></i>&nbsp;Live
                        </a>
                    </li>
                    <% if (user) { %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <%=user.firstName %>&nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <% if (user.role === 'admin') { %>
                                    <li>
                                        <a href="/admin">
                                            <i class="fa fa-bar-chart" aria-hidden="true"></i>&nbsp;Admin
                                        </a>
                                    </li>
                                <% } %>
                                <li>
                                    <a href="/auth/logout">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>&nbsp;Sign out
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <% } else { %>
                        <li>
                            <a href="/auth/google" class="google-btn">Sign in with Google</a>
                        </li>
                    <% } %>
                    <li>
                        <a href="https://finance.yahoo.com/quote/AAPL?p=AAPL" target="_blank">
                            <i class="fa fa-apple" aria-hidden="true"></i>&nbsp;<span id="stockPrice"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <a class="fa fa-chevron-up" aria-hidden="true" id="up" title="Scroll to top"></a>